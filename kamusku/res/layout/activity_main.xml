<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utami.kamusku.MainActivity"
    tools:ignore="Overdraw" >

    <Button
        android:id="@+id/bantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cari"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:drawableTop="@drawable/bantuan"
        android:text="Bantuan"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/cari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bantuan"
        android:layout_alignRight="@+id/bantuan"
        android:layout_below="@+id/judul"
        android:drawableTop="@drawable/cari"
        android:shadowColor="@android:color/background_light"
        android:text="Cari"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/judul"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:focusable="false"
        android:shadowColor="@android:color/holo_green_light"
        android:text="Kamus Istilah Ilmu Kedokteran"
        android:textSize="23sp"
        tools:ignore="HardcodedText,ContentDescription,NewApi" />

    <Button
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/copyright"
        android:textSize="10sp"
        tools:ignore="HardcodedText,SmallSp" />

</RelativeLayout>
